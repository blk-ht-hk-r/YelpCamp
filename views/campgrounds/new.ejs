<%- include ("../partials/header") %>

<div class="row justify-content-center mt-5">
    <div class="col-md-12 text-center">
        <h1>Add New Campground</h1>
    </div>

    <div class="col-md-6 col-lg-4">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="newCampground[title]" placeholder="eg :- Maysoor">
            </div>
            <div class="form-group">
                <label for="name">Price</label>
                <input class="form-control" type="number" name="newCampground[price]" placeholder="eg :- 499" min="1" step="1">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="newCampground[image]" placeholder="https://images.unsplash.com/photo-1575202683848-b058a750ac87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60">
            </div>
            <div class="form-group">
                <label for="body">Description</label>
                <input class="form-control" type="text" name="newCampground[body]"
                    placeholder="Jannat of India and probably the World as well :)">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-info btn-block">Submit!</button>
            </div>

        </form>
    </div>
</div>


<%- include ("../partials/footer") %>